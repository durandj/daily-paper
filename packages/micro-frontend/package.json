    "@daily-paper/mocharc": "workspace:^0.0.0",
    "@daily-paper/tsconfig": "workspace:^0.0.0",
    "@types/enzyme": "^3.10.8",
    "@types/jsdom": "^16.2.6",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
