    "domexception": "^2.0.1",
    "node-fetch": "^3.0.0-beta.9"
  },
  "devDependencies": {
    "@daily-paper/eslint-config": "workspace:^0.0.0",
    "@daily-paper/mocharc": "workspace:^0.0.0",
    "@daily-paper/test-utils": "workspace:^0.0.0",
    "@daily-paper/tsconfig": "workspace:^0.0.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.21",
    "earljs": "^0.1.10",
    "eslint": "^7.18.0",
    "fetch-mock": "^9.11.0",
